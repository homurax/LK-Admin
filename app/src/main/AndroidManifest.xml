<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.light_novel.lkadmin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LKAdminApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.recommendation.WebRecommendActivity"></activity>
        <activity android:name=".ui.recommendation.AppRecommendActivity" />
        <activity android:name=".ui.series.SeriesActivity" />
        <activity android:name=".ui.score.ScoreActivity" />
        <activity android:name=".ui.message.SendMsgActivity" />
        <activity android:name=".ui.message.MessageActivity" />
        <activity android:name=".ui.reply.ReplyActivity" />
        <activity android:name=".ui.comment.CommentActivity" />
        <activity android:name=".ui.article.ArticleActivity" />
        <activity android:name=".ui.user.UserActivity" />
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>